pipeline{
    agent any
    stages{
        stage('scm checkout'){
            steps{
                git branch: 'master', url: 'https://github.com/Abhinav501-eng/maven-project18.git'
            }
        }

        stage('code compile'){
            steps{
                withMaven(globalMavenSettingsConfig: '', jdk: 'JAVA_HOME', maven: 'MAVEN_HOME', mavenSettingsConfig: '', traceability: true) {
               sh 'mvn compile'
              }
            }
        }

        stage('code test'){
            steps{
                withMaven(globalMavenSettingsConfig: '', jdk: 'JAVA_HOME', maven: 'MAVEN_HOME', mavenSettingsConfig: '', traceability: true) {
               sh 'mvn test'
            }
            }
        }

        stage('deployment packages'){
            steps{
                withMaven(globalMavenSettingsConfig: '', jdk: 'JAVA_HOME', maven: 'MAVEN_HOME', mavenSettingsConfig: '', traceability: true) {
               sh 'mvn package'
            }
            }
        }

        stage('deploy to tomcat server'){
            steps{
                 sshagent (credentials: ['15_aug_tom_demo']) {
               sh 'ssh -o StrictHostKeyChecking=no webapp/target/webapp.war ec2-user@172.31.39.176:/usr/share/tomcat webapps/'
            }
        }
    }
}
}